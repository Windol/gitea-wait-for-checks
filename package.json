{
  "name": "gitea-wait-for-checks",
  "description": "Gitea Actions Wait for Checks (JavaScript)",
  "version": "1.1.0",
  "author": "Alex Manoel Ferreira Silva (Windol) <windol@legytma.com.br> - Legytma Soluções Inteligentes Ltda <contato@legytma.com.br>",
  "private": true,
  "homepage": "https://github.com/Legytma/gitea-wait-for-checks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Legytma/gitea-wait-for-checks.git"
  },
  "bugs": {
    "url": "https://github.com/Legytma/gitea-wait-for-checks/issues"
  },
  "keywords": [
    "Gitea",
    "Actions",
    "Wait",
    "Checks",
    "JavaScript"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "release": "commit-and-tag-version"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "cross-fetch": "^4.0.0",
    "gitea-js": "^1.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/eslint-parser": "^7.24.8",
    "@babel/preset-env": "^7.24.8",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "commit-and-tag-version": "^12.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3"
  }
}
